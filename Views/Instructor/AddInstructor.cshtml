@model Instructor;

<h1>Instructor Form</h1>


<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="form-group row">
        <label asp-for="InstructorId" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            <input asp-for="InstructorId" class="form-control"><br />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="InstructorFirstName" class="col-sm-2 col-form-label">Firstname</label>
        <div class="col-sm-10">
            <input asp-for="InstructorFirstName" class="form-control"><br />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="InstructorLastName" class="col-sm-2 col-form-label">Lastname:</label>
        <div class="col-sm-10">
            <input asp-for="InstructorLastName" class="form-control"><br />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Rank" class="col-sm-2 col-form-label">Rank:</label>
        <div class="col-sm-10">
            <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control" class="form-control"></select><br />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="HiringDate" class="col-sm-2 col-form-label">Hiring Date:</label>
        <div class="col-sm-10">
            <input asp-for="HiringDate" class="form-control"><br />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
