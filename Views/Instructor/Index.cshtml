@model IEnumerable<CruzKITELEC1C.Models.Instructor>
@{    
}
<h1>Instructor List</h1>
<a class="btn btn-primary" asp-action="AddInstructor">Add Instructor</a>

<div>
<table class="table table-light">
    
    <tr>
        <th>ID</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Rank</th>
        <th>Hiring Date</th>
        <th>Status</th>
        <th>Show Details</th>
        <th>Update</th>
    </tr>
    @{
        foreach(var inst in Model)
        {
            <tr>
                <td>@inst.InstructorId</td>
                <td>@inst.InstructorFirstName</td>
                <td>@inst.InstructorLastName</td>
                <td>@inst.Rank</td>
                <td>@inst.HiringDate</td>
                <td>@{
                        if(inst.IsTenured == true)
                        {
                            <span>Full-Time</span>
                        }
                        else
                        {
                            <span>Part-Time</span>
                        }
                    }
                </td>
                <td><a class="btn btn-primary" asp-action="ShowDetails" asp-route-id="@inst.InstructorId">Show Details</a></td>
                <td><a class="btn btn-primary" asp-action="UpdateInstructor" asp-route-id="@inst.InstructorId">Update</a></td>
            </tr>
        }
    }   
</table>
</div>